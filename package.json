{
  "name": "@openapi-typescript-infra/service-tester",
  "version": "2.0.1",
  "description": "Testing utilities for @openapi-typescript-infra/service",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "clean": "yarn dlx rimraf build",
    "postinstall": "coconfig"
  },
  "config": {
    "coconfig": "@openapi-typescript-infra/coconfig"
  },
  "peerDependencies": {
    "@openapi-typescript-infra/service": "^2.0.0"
  },
  "engines": {
    "node": ">18.0.0"
  },
  "author": "developers@pyralis.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openapi-typescript-infra/service-tester.git"
  },
  "keywords": [
    "typescript",
    "openapi",
    "vitest"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "yarn dlx pinst --disable"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@openapi-typescript-infra/coconfig": "^4.0.2",
    "@openapi-typescript-infra/service": "^2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/coverage-v8": "^0.34.2",
    "coconfig": "^0.13.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "ts-node": "^10.9.1",
    "vitest": "^0.34.2"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "eslint": "^8.47.0",
    "find-up": "^6.3.0",
    "lodash": "^4.17.21",
    "pino-pretty": "^10.2.0",
    "read-pkg-up": "^7.0.1",
    "rest-api-support": "^1.16.3",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.2.3"
}
