{
  "name": "@openapi-typescript-infra/service-tester",
  "version": "1.0.3",
  "description": "Testing utilities for @openapi-typescript-infra/service",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "clean": "yarn dlx rimraf build",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "postinstall": "husky install && coconfig"
  },
  "config": {
    "coconfig": "@openapi-typescript-infra/coconfig"
  },
  "peerDependencies": {
    "@openapi-typescript-infra/service": "^1.0.0"
  },
  "bin": {
    "oti-jest": "./build/bin/oti-jest.js"
  },
  "engines": {
    "node": ">18.0.0"
  },
  "author": "developers@pyralis.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openapi-typescript-infra/service-tester.git"
  },
  "keywords": [
    "typescript",
    "openapi",
    "jest"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint --cache --fix"
  },
  "devDependencies": {
    "@openapi-typescript-infra/coconfig": "^1.0.0",
    "@openapi-typescript-infra/service": "^1.0.0",
    "@types/lodash": "^4.14.194",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "coconfig": "^0.10.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.1",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.41.0",
    "find-up": "^6.3.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "lodash": "^4.17.21",
    "pino-pretty": "^10.0.0",
    "read-pkg-up": "^7.0.1",
    "rest-api-support": "^1.16.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.2.3"
}
