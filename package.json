{
  "name": "@openapi-typescript-infra/service-tester",
  "version": "7.1.0",
  "description": "Testing utilities for @openapi-typescript-infra/service",
  "exports": "./build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "clean": "yarn dlx rimraf build",
    "postinstall": "cpconfig"
  },
  "config": {
    "cpconfig": "@openapi-typescript-infra/cpconfig"
  },
  "peerDependencies": {
    "@openapi-typescript-infra/service": ">=6.0.0"
  },
  "engines": {
    "node": ">20.0.0"
  },
  "author": "developers@pyralis.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openapi-typescript-infra/service-tester.git"
  },
  "keywords": [
    "typescript",
    "openapi",
    "vitest"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "yarn dlx pinst --disable"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@openapi-typescript-infra/cpconfig": "^1.1.0",
    "@openapi-typescript-infra/service": "^6.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "4.0.9",
    "cpconfig": "^1.4.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "vitest": "4.0.9"
  },
  "dependencies": {
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "find-up": "^8.0.0",
    "pino-pretty": "^13.1.2",
    "read-package-up": "^12.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@3.8.1"
}
